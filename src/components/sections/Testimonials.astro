---
import Container from '../ui/Container.astro';
import SectionHeading from '../ui/SectionHeading.astro';

const testimonials = [
  {
    name: 'Marc D.',
    location: 'Nyon, Vaud',
    text: 'Équipe professionnelle et résultat impeccable. Notre piscine en béton est exactement comme nous l\'avions imaginée.',
    rating: 5,
  },
  {
    name: 'Sophie L.',
    location: 'Genève',
    text: 'Installation rapide de notre piscine coque. Le suivi du chantier était exemplaire du début à la fin.',
    rating: 5,
  },
  {
    name: 'Pierre & Marie R.',
    location: 'Lausanne, Vaud',
    text: 'Rénovation complète de notre piscine vieillissante. Elle est comme neuve ! Merci à toute l\'équipe.',
    rating: 5,
  },
];
---
<section class="py-20">
  <Container>
    <SectionHeading title="Ce que disent nos clients" subtitle="La satisfaction de nos clients est notre plus belle récompense" />
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {testimonials.map((t) => (
        <div class="bg-white rounded-2xl p-8 shadow-md border border-gray-100">
          <div class="flex gap-1 mb-4">
            {Array.from({ length: t.rating }).map(() => (
              <svg class="w-5 h-5 text-gold" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            ))}
          </div>
          <p class="text-gray-600 mb-4 leading-relaxed italic">"{t.text}"</p>
          <div>
            <p class="font-heading font-semibold text-charcoal">{t.name}</p>
            <p class="text-sm text-gray-500">{t.location}</p>
          </div>
        </div>
      ))}
    </div>
  </Container>
</section>
