---
import Container from '../ui/Container.astro';
import SectionHeading from '../ui/SectionHeading.astro';
import Card from '../ui/Card.astro';
import Button from '../ui/Button.astro';

const posts = [
  {
    title: 'Comment choisir entre piscine béton et coque ?',
    excerpt: 'Guide complet pour faire le bon choix selon votre terrain, votre budget et vos envies.',
    date: '15 février 2026',
    slug: '/blog/choisir-beton-ou-coque/',
    category: 'Guide',
  },
  {
    title: 'Préparer sa piscine pour l\'hiver',
    excerpt: 'Les étapes essentielles pour un hivernage réussi et une remise en route facile au printemps.',
    date: '20 janvier 2026',
    slug: '/blog/preparer-piscine-hiver/',
    category: 'Entretien',
  },
  {
    title: 'Les tendances piscine 2026',
    excerpt: 'Design, technologie, éco-responsabilité : découvrez les tendances qui marquent cette année.',
    date: '5 janvier 2026',
    slug: '/blog/tendances-piscine-2026/',
    category: 'Tendances',
  },
];
---
<section class="py-20 bg-gray-50">
  <Container>
    <SectionHeading title="Blog & Conseils" subtitle="Nos derniers articles pour vous guider dans votre projet piscine" />
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {posts.map((post) => (
        <Card href={post.slug} class="overflow-hidden block group">
          <div class="h-48 bg-gradient-to-br from-pool-surface to-pool-light/30"></div>
          <div class="p-6">
            <span class="inline-block px-3 py-1 bg-pool-surface text-pool-deep text-xs font-medium rounded-full mb-3">
              {post.category}
            </span>
            <h3 class="text-lg font-heading font-semibold text-charcoal mb-2 group-hover:text-pool-deep transition-colors">
              {post.title}
            </h3>
            <p class="text-sm text-gray-600 mb-3 line-clamp-2">{post.excerpt}</p>
            <p class="text-xs text-gray-400">{post.date}</p>
          </div>
        </Card>
      ))}
    </div>
    <div class="text-center mt-10">
      <Button variant="ghost" href="/blog/">Voir tous les articles</Button>
    </div>
  </Container>
</section>
